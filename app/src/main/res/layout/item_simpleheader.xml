<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="item" type="com.umairjavid.kombindsample.model.SimpleHeader"/>
        <variable name="handler" type="com.umairjavid.kombindsample.ui.main.SimpleItemAdapter.HeaderActionHandler"/>
    </data>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_normal"
        android:background="@color/colorPrimaryDark"
        android:onClick="@{(view) -> handler.onHeaderItemClick(item)}">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:text="@{item.title}"
            tools:text="Header"/>
    </FrameLayout>
</layout>
